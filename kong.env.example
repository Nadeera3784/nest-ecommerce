# Kong Gateway Environment Configuration
# Copy this file to kong.env and update values for your environment

# ============================================
# KONG DATABASE CONFIGURATION
# ============================================
KONG_PG_HOST=kong-database
KONG_PG_PORT=5432
KONG_PG_DATABASE=kong
KONG_PG_USER=kong
KONG_PG_PASSWORD=kongpass

# ============================================
# KONG GATEWAY CONFIGURATION
# ============================================
KONG_DATABASE=postgres
KONG_PROXY_ACCESS_LOG=/dev/stdout
KONG_ADMIN_ACCESS_LOG=/dev/stdout
KONG_PROXY_ERROR_LOG=/dev/stderr
KONG_ADMIN_ERROR_LOG=/dev/stderr

# Admin API
KONG_ADMIN_LISTEN=0.0.0.0:8001

# Admin GUI
KONG_ADMIN_GUI_URL=http://localhost:8002
KONG_ADMIN_GUI_LISTEN=0.0.0.0:8002

# Proxy
KONG_PROXY_LISTEN=0.0.0.0:8000, 0.0.0.0:8443 ssl

# ============================================
# MICROSERVICES CONFIGURATION
# ============================================
AUTH_SERVICE_URL=http://authentication:3000
INVENTORY_SERVICE_URL=http://inventory:3000
PAYMENT_SERVICE_URL=http://payment:3000

# ============================================
# RATE LIMITING CONFIGURATION
# ============================================
AUTH_RATE_LIMIT_MINUTE=100
AUTH_RATE_LIMIT_HOUR=1000
INVENTORY_RATE_LIMIT_MINUTE=200
INVENTORY_RATE_LIMIT_HOUR=2000
PAYMENT_RATE_LIMIT_MINUTE=50
PAYMENT_RATE_LIMIT_HOUR=500

# ============================================
# CACHE CONFIGURATION
# ============================================
CACHE_TTL=300  # 5 minutes
CACHE_STRATEGY=memory

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGINS=*  # Set to specific origins in production
CORS_CREDENTIALS=true
CORS_MAX_AGE=3600




